<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/shape_rectangle"
    android:backgroundTint="@color/white"
    android:backgroundTintMode="add"
    android:translationZ="4dp"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="14dp"
        android:orientation="horizontal"
        android:clipChildren="false">

        <ImageView
            android:id="@+id/textbook_cover"
            android:layout_width="109dp"
            android:layout_height="171dp"
            android:layout_marginVertical="8dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/book_cover"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="8dp">

            <TextView
                android:id="@+id/textbook_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Физика 10 класс Мякишев"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Авторы:"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textbook_authors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мякишева Г.Я.,Буховцева Б.Б.,
Сотского Н.Н"
                android:textColor="@color/colorGrey"
                android:textSize="16sp"
                android:textStyle="italic" />

            <ImageView
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_rectangle"
                android:backgroundTint="@color/colorLightGrey"
                android:duplicateParentState="false"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/textbook_class"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rectangle"
                    android:backgroundTint="@color/colorAccent"
                    android:backgroundTintMode="add"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="10 класс"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textbook_subject"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/shape_rectangle"
                    android:backgroundTint="@color/colorGrey"
                    android:backgroundTintMode="add"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="Математика"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>