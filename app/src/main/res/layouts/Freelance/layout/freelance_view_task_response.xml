<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.Freelance.ViewResponseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="8dp"
        android:elevation="4dp"
        android:background="@drawable/shape_rectangle"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="add"
        android:orientation="vertical"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clipChildren="false">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/blank_profile"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorLightBlack"/>

            <TextView
                android:id="@+id/response_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:text="Имя Имя"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <TextView
            android:id="@+id/response_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Я пишу тебе потомучта я умный"
            android:textColor="@color/colorGrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/shape_rectangle"
            android:backgroundTint="@color/colorLightGrey"
            android:backgroundTintMode="add"
            android:orientation="horizontal"
            android:clipChildren="false">

            <TextView
                android:id="@+id/response_compl_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата выполнения: 21.01.2000"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/response_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500 руб"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/appoint_as_executor_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Назначить"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/open_chat_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Открыть чат"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>