<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragments.Freelance.FreelanceResponsesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:orientation="vertical"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:padding="12dp"
            android:orientation="vertical"
            android:background="@drawable/shape_rectangle"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="add"
            android:elevation="4dp"
            android:clipChildren="false">

            <TextView
                android:id="@+id/task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Название задачи"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:clipChildren="false">

                <TextView
                    android:id="@+id/task_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:text="10 класс"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_rectangle"
                    android:backgroundTint="@color/colorAccent"
                    android:backgroundTintMode="add"/>

                <TextView
                    android:id="@+id/task_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginStart="15dp"
                    android:text="Математика"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_rectangle"
                    android:backgroundTint="@color/colorGrey"
                    android:backgroundTintMode="add"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/freelance_responses_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:clipChildren="false"
            tools:listitem="@layout/freelance_response_card_view">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>