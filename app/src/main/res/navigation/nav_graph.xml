<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.communityapp.Fragments.SignInFragment"
        android:label="fragment_signin"
        tools:layout="@layout/fragment_signin" >
        <action
            android:id="@+id/action_signInFragment_to_profileFragment"
            app:destination="@id/nav_profile"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.communityapp.Fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_nav_profile_to_profileEditFragment"
            app:destination="@id/profileEditFragment"/>
    </fragment>

    <fragment
        android:id="@+id/nav_gdz"
        android:name="com.example.communityapp.Fragments.GdzFragment"
        android:label="fragment_gdz"
        tools:layout="@layout/fragment_gdz" />

    <fragment
        android:id="@+id/nav_messenger"
        android:name="com.example.communityapp.Fragments.MessengerFragment"
        android:label="fragment_messenger"
        tools:layout="@layout/fragment_messenger" />

    <fragment
        android:id="@+id/nav_freelance"
        android:name="com.example.communityapp.Fragments.FreelanceFragment"
        android:label="fragment_freelance"
        tools:layout="@layout/fragment_freelance"/>

    <action
        android:id="@+id/action_global_signInFragment"
        app:destination="@id/signInFragment"
        app:popUpTo="@id/nav_profile"
        app:popUpToInclusive="true"/>
    <fragment
        android:id="@+id/profileEditFragment"
        android:name="com.example.communityapp.Fragments.ProfileEditFragment"
        android:label="fragment_profile_edit"
        tools:layout="@layout/fragment_profile_edit" >
        <action
            android:id="@+id/action_profileEditFragment_to_nav_profile"
            app:destination="@id/nav_profile" />
    </fragment>

</navigation>