<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".Fragments.GdzBookTasksFragment">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:translationZ="4dp"
            android:id="@+id/gdz_book_tasks_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rectangle"
            android:backgroundTint="@color/white"
            android:paddingVertical="10dp"
            android:backgroundTintMode="add"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:orientation="horizontal"
                android:clipChildren="false">

                <ImageView
                    android:id="@+id/gdz_book_cover"
                    android:layout_width="109dp"
                    android:layout_height="171dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/book_cover"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginVertical="8dp">

                    <TextView
                        android:id="@+id/gdz_book_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Физика 10 класс Мякишев"
                        android:textColor="@color/colorBlack"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Авторы:"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/gdz_book_authors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Мякишева Г.Я.,Буховцева Б.Б., Сотского Н.Н"
                        android:textColor="@color/colorGrey"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <ImageView
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_rectangle"
                        android:backgroundTint="@color/colorLightGrey"
                        android:duplicateParentState="false"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/gdz_book_class"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_rectangle"
                            android:backgroundTint="@color/colorAccent"
                            android:backgroundTintMode="add"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="10 класс"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/gdz_book_subject"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/shape_rectangle"
                            android:backgroundTint="@color/colorGrey"
                            android:backgroundTintMode="add"
                            android:gravity="center"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="Математика"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/gdz_book_descption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="14dp"
                android:backgroundTintMode="add"
                android:gravity="center"
                android:text="Предлагаемый учебник «Физика. 10 класс. Базовый уровень» соответствует требованиям ФГОС. Издание открывает собой предметную линию «Классический курс» и знакомит учащихся преимущественно с вопросами классической науки: механики, молекулярной физики и электродинамики."
                android:textAlignment="viewStart"
                android:textColor="@color/colorDarkBlack"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangle"
                android:backgroundTint="@color/white"
                android:paddingVertical="10dp"
                android:backgroundTintMode="add"
                android:translationZ="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="14dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="13dp"
                    android:backgroundTintMode="add"
                    android:gravity="center"
                    android:text="Номер задания: 123"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorDarkBlack"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/shape_rectangle"
                        android:backgroundTint="@color/colorAccent"
                        android:backgroundTintMode="add"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:text="Решено"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/chat" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.4"
                        android:gravity="start"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:text="решений 7"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>